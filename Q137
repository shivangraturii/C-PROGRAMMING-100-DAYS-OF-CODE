// Create an enum for user roles (ADMIN, USER, GUEST) and display messages based on role.

/*
Sample Test Cases:
Input 1:
GUEST
Output 1:
Welcome Guest!

*/
#include <stdio.h>

enum Role {
    ADMIN = 1,
    USER,
    GUEST
};

int main() {

    int role;

    printf("Select your role:\n");
    printf("1. ADMIN\n");
    printf("2. USER\n");
    printf("3. GUEST\n");
    printf("Enter your choice: ");
    scanf("%d", &role);

    switch (role) {
        case ADMIN:
            printf("Welcome ADMIN! You have full access.\n");
            break;

        case USER:
            printf("Welcome USER! You have limited access.\n");
            break;

        case GUEST:
            printf("Welcome GUEST! You can only view public data.\n");
            break;

        default:
            printf("Invalid role selected.\n");
    }

    return 0;
}
