// Define a struct with enum Gender and print person's gender.
#include <stdio.h>

enum Gender {
    MALE = 1,
    FEMALE,
    OTHER
};

struct Person {
    char name[50];
    enum Gender gender;
};

int main() {

    struct Person p;

    printf("Enter name: ");
    scanf("%s", p.name);

    printf("\nSelect Gender:\n");
    printf("1. MALE\n");
    printf("2. FEMALE\n");
    printf("3. OTHER\n");
    printf("Enter your choice: ");
    scanf("%d", &p.gender);

    printf("\nName: %s\n", p.name);

    switch (p.gender) {
        case MALE:
            printf("Gender: MALE\n");
            break;

        case FEMALE:
            printf("Gender: FEMALE\n");
            break;

        case OTHER:
            printf("Gender: OTHER\n");
            break;

        default:
            printf("Invalid gender selected.\n");
    }

    return 0;
}
